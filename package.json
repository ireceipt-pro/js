    "giftcard"
  ],
  "homepage": "https://www.npmjs.com/package/@ireceipt-pro/js",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "chai": "^4.5.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "mocha": "^10.7.0",
    "nyc": "^17.0.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=14"
  },
  "directorie": {
    "test": "./test/"
  },
  "dependencies": {
    "axios": "^1.7.2"
  }
