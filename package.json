    "template",
    "templates",
    "mustache",
    "invoice",
    "giftcard"
  ],
  "homepage": "https://www.npmjs.com/package/@ireceipt-pro/js",
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "eslint": "^9.13.0",
    "nyc": "^17.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.10.0"
  },
  "engines": {
    "node": ">=14"
  },
  "directorie": {
    "test": "./test/"
  },
  "dependencies": {
    "axios": "^1.7.7"
  }
}
